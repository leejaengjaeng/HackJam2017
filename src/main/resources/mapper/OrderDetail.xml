<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hackjam.dao.OrderDetailDAO">
	<resultMap id="menuResultMap" type="Menu">
		<id column="menu_id" property="menuId"/>
		<result column="menu_name" property="menuName"/>
	</resultMap>

	<resultMap id="orderDetailResultMap" type="OrderDetail">
		<result column="order_id" property="orderId"/>
		<result column="count" property="count"/>
		<association property="menu" resultMap="menuResultMap"/>
	</resultMap>

	<select id="select" resultMap="orderDetailResultMap" parameterType="int">
		SELECT
			order_id,
			m.menu_id,
			m.menu_name,
			count
		FROM
			order_detail o_d
		JOIN
			menu m
		ON
			o_d.menu_id = m.menu_id
		WHERE
			order_id = #{orderId}
	</select>

	<insert id="insert" parameterType="Map">
		INSERT
		INTO
			order_detail(
				order_id,
				menu_id,
				count,
                cost,
				hot
			)
		VALUES
		 <foreach collection="orderDetails"  item="orderDetail" separator=",">
            (
                #{orderId},
                #{orderDetail.menu.menuId},
                #{orderDetail.count},
                (
                    SELECT cost
                    FROM menu
                    WHERE
                        menu_id = #{orderDetail.menu.menuId}
                ) * #{orderDetail.count},
			 	#{orderDetail.hot}
            )
		 </foreach>
		ON DUPLICATE KEY UPDATE
			count = VALUES(count),
			cost = VALUES(cost)
	</insert>

    <!--
